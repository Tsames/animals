<!DOCTYPE html>
<html lang="en">
  <%- include("../partials/head.ejs") %>

  <body>
    <%- include("../partials/header.ejs") %>
    <main>
      <div>
        <form action="/animals" method="post">
          <fieldset>
              <legend>Create a New animal</legend>
            <label>
              Species:<input
                type="text"
                name="species"
              />
            </label>
            <label>
              Location:<input
                type="text"
                name="location"
              />
            </label>
            <label>
                Life Expectancy:<input
                  type="number"
                  name="lifeExpectancy"
                  placeholder="in years"
                />
              </label>
            <label>
              Extinct:<input type="checkbox" name="extinct" />
            </label>
          </fieldset>
          <input type="submit" value="create new animal" />
        </form>
      </div>
    </main>
  </body>
</html>